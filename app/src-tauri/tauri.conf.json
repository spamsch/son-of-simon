{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Son of Simon",
  "version": "0.3.1",
  "identifier": "com.sonofsimon.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Son of Simon",
        "width": 800,
        "height": 1024,
        "resizable": true,
        "center": true,
        "minWidth": 700,
        "minHeight": 820
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": ["binaries/son"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Utility",
    "shortDescription": "AI-powered macOS automation",
    "longDescription": "Son of Simon is your AI assistant that can interact with macOS applications like Mail, Calendar, Reminders, and more through natural language commands.",
    "macOS": {
      "entitlements": "./Entitlements.plist",
      "minimumSystemVersion": "12.0",
      "dmg": {
        "windowSize": {
          "width": 540,
          "height": 380
        },
        "appPosition": {
          "x": 140,
          "y": 180
        },
        "applicationFolderPosition": {
          "x": 400,
          "y": 180
        }
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
